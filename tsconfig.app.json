{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "types": []
  },
  "files": [
    "src/main.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts"
  ],
  "exclude": [
    "src/**/*.spec.ts",
    "src/mockData/*.ts",
    "src/test.ts",
    "src/test.ts",
    "src/environments/*.ts",
    "node_modules",
    "node_modules/*",
    "node_modules/@types/node/index.d.ts"
  ]
}
